                                </div>


                                <div class="form-group col-md-6">
                                    <label class="col-form-label">Rua</label>
                                    <input type="text" class="form-control" id="inputRua" name="inputRua" placeholder="" value="@ViewBag.Aluno.AlunoLogradouro.LogradouroRua">

                                </div>
                                <div class="form-group col-sm-2">
                                    <label for="inputNumero" class="col-form-label">Nº</label>
                                    <input type="text" class="form-control" id="inputNumero" name="inputNumero" placeholder="" value="@ViewBag.Aluno.AlunoLogradouro.LogradouroNumero">

                                </div>


                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputComplemento" class="col-form-label">Complemento</label>
                                    <input type="text" class="form-control" id="inputComplemento" name="inputComplemento" placeholder="" value="@ViewBag.Aluno.AlunoLogradouro.LogradouroComplemento">

                                </div>

