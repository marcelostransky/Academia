                                        </div>

                                        <div class="col company text-truncate px-1 d-none d-sm-flex mx-4">
                                            @item.FiliacaoTelefone
                                        </div>
                                        <div class="col company text-truncate px-1 d-none d-sm-flex">
                                            <a href="#" class="btn btn-icon fuse-ripple-ready" title="Excluir Família"> <i class="icon-delete-forever"></i>    </a>
                                        </div>
                                    </div>

